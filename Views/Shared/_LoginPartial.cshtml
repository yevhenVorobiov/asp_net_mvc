@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" href="#">Hello, @(User.Identity.GetUserName())!</a>
        </li>
        <li>
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", null, new {@class = "nav-link" })</li>
    </ul>
}
